<package>
  <description brief="turtlebot_360_hardware_interface">

     turtlebot_360_hardware_interface
     This module comunicates with the base platform. It takes the x y and 
     rotational velocitys and converts them to motor commands and also pulls 
     back any sensor data from the base. 

  </description>
  <author>James Anderson</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/turtlebot_360_hardware_interface</url>
  
  
  <depend package = "roscpp"/>
  <depend package = "std_msgs"/>
  <depend package = "geometry_msgs"/>
  
  <!-- depends for using dynamic reconfigur gui -->
  <depend package="dynamic_reconfigure" />
  <depend package="driver_base" />
  
  

</package>


